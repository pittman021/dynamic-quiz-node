<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
    <div class="page-header">
        <h1>Create a new Quiz!</h1>
    </div>
    
    <div class="row">
        <div class="col-md-6 create-quiz">
            <form action="/quizzes/new" method="POST">
                 <div class="form-group">
                   <label for="quiztitle"><h4>Title</h4></label>
                   <input type="text" class="form-control" id="quiztitle" name="title" placeholder="Title"></input>
                 </div>
                 
                 <div class="form-group">
                   <label for="question"><h4>Question</h4></label>
                   <input type="text" class="form-control" name="question" id="question" placeholder="What is the question?"></input>
                 </div>
                 
                 <div class="row">
                     <div class="col-md-4">
                         <h4>Choices</h4>
                     </div>
                     <div class="col-md-8">
                                 <button class="btn btn-primary btn-md" type="button" id="add-choice">Add Choice</button>
                     </div>
                     </div>
                     
                     <div id="choices">
                           <div class="form-group"><label for="Choice 1">Choice 1</label><input type="text" class="form-control choice" name="choice[1]" id="choice1" placeholder="Choice 1"></div>
                   
                     </div>
                 
                 <h4>Correct Answer</h4>
                 
                 <div id="radios">
                     <div class="form-check">
                        <label class="form-check-label"> <input class="form-check-input" type="radio" name="answer" value="1"></input>
                        Choice 1
                        </label>
                    </div>
                 </div>
                
                <div class="submit">
                 <button class="btn btn-primary btn-lg" type="submit">Create Quiz</button> 
                </div>
            </form>
        </div>
    </div>
    
    
</div>

<% include ../partials/footer %>

