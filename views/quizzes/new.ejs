<% include ../partials/header %>

<div class="container">
    <div class="page-header">
        <h1>Create a new Quiz!</h1>
    </div>
    
    <div class="row">
        <div class="col-md-6 create-quiz">
            <form action="/quizzes/new" method="POST">
                 <div class="form-group">
                   <label for="quiztitle">Title</label>
                   <input type="text" class="form-control" id="quiztitle" name="title" placeholder="Title"></input>
                 </div>
                 <hr>
                 <h3>Questions</h3>
                 <div class="form-group">
                   <label for="question">Question</label>
                   <input type="text" class="form-control" name="question" id="question" placeholder="What is the question?"></input>
                 </div>
                 <div class="form-group">
                    <label for="Choice 1">Choice 1</label>
                   <input type="text" class="form-control" name="choice1" id="choice1" placeholder="Choice 1"></input>
                 </div>
                 <div class="form-group">
                    <label for="Choice 2">Choice 2</label>
                   <input type="text" class="form-control" name="choice2" id="choice2" placeholder="Choice 2"></input>
                 </div>
                 <div class="form-group">
                    <label for="Choice 3">Choice 3</label>
                   <input type="text" class="form-control" name="choice3" id="choice3" placeholder="Choice 3"></input>
                 </div>
                 <p>Correct Answer</p>
  
                      <div class="form-check form-check-inline">
                      <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="answer" id="inlineRadio1" value="choice1"> 1
                      </label>
                    </div>
                    <div class="form-check form-check-inline">
                      <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="answer" id="inlineRadio2" value="choice2"> 2
                      </label>
                    </div>
                    <div class="form-check form-check-inline disabled">
                      <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="answer" id="inlineRadio3" value="choice3"> 3
                      </label>
                    </div>
                
                 <button class="btn btn-primary btn-lg">Create Quiz</button> 
                </div>
            </form>
        </div>
    </div>
    
    
</div>

<% include ../partials/footer %>

