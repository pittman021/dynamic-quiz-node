<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
  <div class="row">
    <div class="col-md-6 quiz">
            <h2 id="welcome"><%= quiz.title %></h2>
              
              <form action="/quizzes/<%= quiz._id %>/scores" method="POST">
                <h4><%= quiz.question %></h4>
                <% var i = 0; %>
                <% quiz.choices.forEach(function(choice) { %>
                 <% i += 1; %>
                  <div class="form-check">
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="choice" value="<%= i %>" </input>
                    <%= choice %>
                  </label>
                </div>
              <%  }); %>
              <button class="btn btn-primary btn-lg">Submit Score</button>
              </form>
    </div>
    <div class="col-md-6 results">
        <h2>Quiz Results!</h2>
                <div class="card">
                    <div class="card-block">
                      <h4>Scores: <%= quiz.scores.length %></h4>
                      <h4>Average Score: <%= avg %>%</h4>
   </div>
  </div>
</div>

<% include ../partials/footer %>